# ============================================
# SCHOOL MANAGEMENT SYSTEM - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in the actual values
# NEVER commit the .env file to version control

# ============================================
# DJANGO CORE SETTINGS
# ============================================

# Environment: 'development', 'production'
DJANGO_ENVIRONMENT=development

# Secret key for cryptographic signing (REQUIRED - generate a new one for production)
# Generate using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production-use-random-50-char-string

# Debug mode - MUST be False in production
DEBUG=True

# Allowed hosts - comma-separated list of domains
ALLOWED_HOSTS=localhost,127.0.0.1

# Logging level
DJANGO_LOG_LEVEL=INFO

# ============================================
# DATABASE SETTINGS
# ============================================

# SQLite (default for development)
# No configuration needed - uses db.sqlite3 file

# PostgreSQL (for production)
DB_NAME=school_management_db
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432

# ============================================
# SECURITY SETTINGS
# ============================================

# Session cookie security (set to True in production with HTTPS)
SESSION_COOKIE_SECURE=False

# CSRF cookie security (set to True in production with HTTPS)
CSRF_COOKIE_SECURE=False

# ============================================
# EMAIL CONFIGURATION
# ============================================

# Email backend
# Development: django.core.mail.backends.console.EmailBackend
# Production: django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP settings (required for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@schoolmanagement.com

# Admin email for error notifications
ADMIN_EMAIL=admin@schoolmanagement.com

# ============================================
# TIMEZONE SETTINGS
# ============================================

# Server timezone (use your local timezone)
# Examples: UTC, America/New_York, Europe/London, Asia/Kolkata
TIME_ZONE=UTC

# ============================================
# STATIC & MEDIA FILES
# ============================================

# Static files URL
STATIC_URL=/static/

# Media files URL
MEDIA_URL=/media/

# ============================================
# REDIS CACHE (PRODUCTION)
# ============================================

# Redis URL for caching and sessions
REDIS_URL=redis://127.0.0.1:6379/1

# ============================================
# AWS S3 STORAGE (OPTIONAL - FOR CLOUD STORAGE)
# ============================================

# AWS credentials
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# ============================================
# PAYMENT GATEWAY (FOR FUTURE INTEGRATION)
# ============================================

# Stripe
STRIPE_PUBLIC_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Razorpay (alternative)
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=xxxxx

# PayPal (alternative)
PAYPAL_CLIENT_ID=xxxxx
PAYPAL_CLIENT_SECRET=xxxxx
PAYPAL_MODE=sandbox

# ============================================
# SMS GATEWAY (FOR FUTURE INTEGRATION)
# ============================================

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=xxxxx
TWILIO_PHONE_NUMBER=+1234567890

# AWS SNS (alternative)
AWS_SNS_REGION=us-east-1

# ============================================
# APPLICATION SETTINGS
# ============================================

# School Management specific settings
DEFAULT_ACADEMIC_YEAR=2024-2025
MAX_STUDENTS_PER_CLASS=50
ATTENDANCE_GRACE_PERIOD_MINUTES=15
FEE_DUE_REMINDER_DAYS=7,14,30

# File upload limits (in bytes)
MAX_FILE_SIZE=5242880
MAX_PHOTO_SIZE=2097152

# Session timeout (in seconds)
SESSION_TIMEOUT=86400

# ============================================
# THIRD-PARTY INTEGRATIONS (OPTIONAL)
# ============================================

# Google OAuth (for social login)
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxxxx

# Sentry (for error tracking)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Google Analytics
GA_TRACKING_ID=UA-XXXXX-X

# ============================================
# DEVELOPMENT TOOLS
# ============================================

# Django Debug Toolbar (development only)
ENABLE_DEBUG_TOOLBAR=False

# ============================================
# MULTI-TENANCY SETTINGS
# ============================================

# Tenant configuration
DEFAULT_SUBDOMAIN=demo
TENANT_MODEL=accounts.School
TENANT_DOMAIN_MODEL=accounts.Domain

# ============================================
# API SETTINGS
# ============================================

# JWT token expiry (in hours)
JWT_ACCESS_TOKEN_LIFETIME=24
JWT_REFRESH_TOKEN_LIFETIME=168

# API rate limiting
API_RATE_LIMIT=1000/hour

# ============================================
# BACKUP SETTINGS
# ============================================

# Database backup schedule
DB_BACKUP_ENABLED=True
DB_BACKUP_SCHEDULE=0 2 * * *

# Backup storage location
BACKUP_STORAGE_PATH=/backups
BACKUP_RETENTION_DAYS=30

# ============================================
# NOTES
# ============================================
# 1. Generate a strong SECRET_KEY for production
# 2. Set DEBUG=False in production
# 3. Configure proper email settings for production
# 4. Set up Redis for production caching
# 5. Configure AWS S3 or similar for media file storage
# 6. Enable HTTPS and set security cookies to True
# 7. Set up proper database backups
# 8. Configure error tracking (Sentry) for production
# 9. Update ALLOWED_HOSTS with your actual domains
# 10. Never commit the .env file to version control
